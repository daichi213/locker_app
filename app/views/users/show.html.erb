<% provide(:title, @user.name) %>
<div class="row">
    <aside class="col-md-8">
        <section class="user-show col-md-offset-5">
            <div class='user-show-top'>
                <h1 class='user-show-image'>
                    <% if current_user.picture? %>
                        <%= image_tag current_user.picture.thumb50.url %>
                    <% else %>
                        <%= image_tag "/uploads/user/picture/thumb50_default.jpg" %>
                    <% end %>
                </h1>
                <ul>
                    <li><%= @user.name %></li>
                    <li><%= @user.email %></li>
                    <li><%= "評価 #{@user.user_apparause_point}点" %></li>
                </ul>
            </div>
            <div class='user-info'>
                <h2>住所</h2>
                <h3><%= @user.address %></h3>
            </div>

        </section>
        <section class='stats'>
            <!-- relationships実装後に開放 -->
            <%#= render 'shared/stats' %>
        </section>
    </aside>
    <div class="col-md-8">
        <!-- relationships実装後に開放 -->
        <%#= render 'follow_form' if logged_in? %>
    </div>
</div>